<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/newprefcircles"
    tools:context="com.example.c4q.capstone.userinterface.user.onboarding.BarPreferencesFragment"
    >


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="120dp"
        android:layout_marginTop="40dp"
        android:padding="16dp"
        android:textStyle="bold"
        android:text="What kind of bars \ndo you prefer?"
        android:textSize="25sp"
     />


    <Button
        android:id="@+id/beer_pref"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="42dp"
        android:background="@drawable/preferencesbutton"
        android:text="Beer Bar"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bar_pref_save_button" />

    <Button
        android:id="@+id/lounge_pref"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="62dp"
        android:layout_marginEnd="37dp"
        android:layout_marginStart="37dp"
        android:background="@drawable/preferencesbutton"
        android:text="Lounge"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/beer_pref"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/club_pref"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="12dp"
        android:textColor="@color/gray"
        android:background="@drawable/preferencesbutton"
        android:text="Clubs"
        app:layout_constraintBottom_toTopOf="@+id/beer_pref"
        app:layout_constraintStart_toEndOf="@+id/beach_pref" />

    <Button
        android:id="@+id/beach_pref"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/preferencesbutton"
        android:text="Beach Bar"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/lounge_pref"
        app:layout_constraintStart_toEndOf="@+id/karaoke_pref" />

    <Button
        android:id="@+id/gayBar_pref"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginEnd="57dp"
        android:background="@drawable/preferencesbutton"
        android:text="Gay Bars"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/hookah_pref"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/hookah_pref"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="156dp"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="12dp"
        android:textColor="@color/gray"
        android:background="@drawable/preferencesbutton"
        android:text="Hookah"
        app:layout_constraintBottom_toTopOf="@+id/bar_pref_save_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/club_pref" />

    <Button
        android:id="@+id/hotel_pref"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/preferencesbutton"
        android:text="Hotel Bars"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/beach_pref"
        app:layout_constraintEnd_toStartOf="@+id/hookah_pref"
        app:layout_constraintTop_toBottomOf="@+id/gayBar_pref"
        app:layout_constraintVertical_bias="0.447" />

    <Button
        android:id="@+id/karaoke_pref"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="76dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/preferencesbutton"
        android:text="Karaoke"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/lounge_pref"
        app:layout_constraintEnd_toStartOf="@+id/beach_pref"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/pub_pref"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/preferencesbutton"
        android:text="Pubs"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/cocktail_pref"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="11dp"
        android:layout_marginStart="70dp"
        android:background="@drawable/preferencesbutton"
        android:text="Cocktail"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/karaoke_pref"
        app:layout_constraintEnd_toStartOf="@+id/hotel_pref"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent" />

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/bar_pref_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_arrow_forward_black_24dp"
        app:fab_colorNormal="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/club_pref" />


    </android.support.constraint.ConstraintLayout>


